<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Preciso.Views.ProfissionalRegisterPageView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15">
                <Entry Style="{StaticResource StyleEntry}"
					   Placeholder="Nome" />

                <Picker Style="{StaticResource StyleEntry}"
                        Title="Tipo Profissional">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Eletricista</x:String>
                            <x:String>Bombeiro Hidráulico</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Button	Style="{StaticResource StyleButton}"
                        Text="Cadastrar"/>
                <Button Style="{StaticResource StyleButton}"
                        Text="Cancelar" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>